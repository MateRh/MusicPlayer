<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:background="#151515">

    <ImageView
            android:id="@+id/grid_image"
            android:layout_width="match_parent"
            android:layout_height="185dp" android:contentDescription="a"
    >
    </ImageView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:layout_marginTop="-30dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" android:background="#7f000000"/>

</LinearLayout>